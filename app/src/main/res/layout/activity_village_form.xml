<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="15">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.0"
        android:background="@drawable/yellow_gradient_header"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:shadowColor="#dd000000"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:shadowRadius="2"
            android:text="Ekal Connect"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#2B2B29"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#9C9874" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_body"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="horizontal"
            android:weightSum="10">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/ll_mainBody"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="13dp"
                android:paddingTop="13dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="13dp"
                    android:text="Name"
                    android:textColor="#347B8F" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/darkblue_border_box">

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/darkblue_border_box"
                        android:hint=""
                        android:inputType="textCapWords|textPersonName"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333"
                        android:textColorHint="#347B8F" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="2dp"
                        android:text="*"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#C90000" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="13dp"
                    android:text="Identity Reference Type"
                    android:textColor="#347B8F" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/darkblue_border_box">

                    <com.connectapp.user.view.DropDownViewForXML
                        android:id="@+id/dropDown_idType"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="35dp"
                        android:hint="-- select --"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333" />

                    <ImageView
                        android:layout_width="31.5dp"
                        android:layout_height="31.5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dropdown_arrow_4"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="2dp"
                        android:text="*"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#C90000"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="13dp"
                    android:text="Identity Reference No"
                    android:textColor="#347B8F" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/darkblue_border_box">

                    <EditText
                        android:id="@+id/et_idNo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/darkblue_border_box"
                        android:hint=""
                        android:inputType="textCapCharacters"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333"
                        android:textColorHint="#347B8F" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="2dp"
                        android:text="*"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#C90000"
                        android:visibility="invisible" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="13dp"
                    android:text="Phone"
                    android:textColor="#347B8F" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/darkblue_border_box">

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/darkblue_border_box"
                        android:digits="012345789"
                        android:hint=""
                        android:inputType="phone"
                        android:maxLength="10"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333"
                        android:textColorHint="#347B8F" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="2dp"
                        android:text="*"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#C90000"
                        android:visibility="invisible" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="13dp"
                    android:text="Email"
                    android:textColor="#347B8F" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/darkblue_border_box">

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/darkblue_border_box"
                        android:hint=""
                        android:imeOptions="actionDone"
                        android:inputType="textWebEmailAddress"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"

                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333"
                        android:textColorHint="#347B8F" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="2dp"
                        android:text="*"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#C90000"
                        android:visibility="invisible" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="13dp"
                    android:text="Date Of Birth"
                    android:textColor="#347B8F" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/darkblue_border_box">

                    <TextView
                        android:id="@+id/tv_dob"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="35dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333" />

                    <ImageView
                        android:layout_width="31.5dp"
                        android:layout_height="31.5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_date" />

                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="13dp"
                    android:text="Date Of Marriage"
                    android:textColor="#347B8F" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/darkblue_border_box">

                    <TextView
                        android:id="@+id/tv_dom"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="35dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333" />

                    <ImageView
                        android:layout_width="31.5dp"
                        android:layout_height="31.5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_date" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_spouse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="13dp"
                        android:text="Spouse"
                        android:textColor="#347B8F" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="13dp"
                        android:background="@drawable/darkblue_border_box">

                        <ImageView
                            android:id="@+id/iv_add_spouse"
                            android:layout_width="31.5dp"
                            android:layout_height="31.5dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="2dp"
                            android:onClick="onSpouseAddClick"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_add_spouse" />

                        <TextView
                            android:id="@+id/tv_spouse"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/iv_add_spouse"
                            android:background="@android:color/transparent"
                            android:clickable="true"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:paddingRight="35dp"
                            android:singleLine="true"
                            android:text="Indira Banerjee"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#333333" />

                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="13dp"
                    android:text="Gender"
                    android:textColor="#347B8F" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/darkblue_border_box">

                    <com.connectapp.user.view.DropDownViewForXML
                        android:id="@+id/dropDown_gender"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="35dp"
                        android:singleLine="true"
                        android:hint="-- select --"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333" />

                    <ImageView
                        android:layout_width="31.5dp"
                        android:layout_height="31.5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dropdown_arrow_4" />

                    <TextView
                        android:id="@+id/tv_habitationIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="2dp"
                        android:text="*"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#C90000"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="13dp"
                    android:text="No Of People In Family"
                    android:textColor="#347B8F" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/darkblue_border_box">

                    <EditText
                        android:id="@+id/et_familyMemCount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/darkblue_border_box"
                        android:hint=""
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333"
                        android:textColorHint="#347B8F" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="2dp"
                        android:text="*"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#C90000"
                        android:visibility="invisible" />
                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="13dp"
                    android:text="Role"
                    android:textColor="#347B8F" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/darkblue_border_box">

                    <com.connectapp.user.view.DropDownViewForXML
                        android:id="@+id/dropDown_role"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="35dp"
                        android:hint="-- select --"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333" />

                    <ImageView
                        android:layout_width="31.5dp"
                        android:layout_height="31.5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dropdown_arrow_4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="2dp"
                        android:text="*"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#C90000"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="13dp"
                    android:text="Qualification"
                    android:textColor="#347B8F" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/darkblue_border_box">

                    <com.connectapp.user.view.DropDownViewForXML
                        android:id="@+id/dropDown_qualification"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="35dp"
                        android:singleLine="true"
                        android:hint="-- select --"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333" />

                    <ImageView
                        android:layout_width="31.5dp"
                        android:layout_height="31.5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dropdown_arrow_4" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="13dp"
                    android:text="Religion"
                    android:textColor="#347B8F" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/darkblue_border_box">

                    <EditText
                        android:id="@+id/et_religion"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/darkblue_border_box"
                        android:hint=""
                        android:imeOptions="actionDone"
                        android:inputType="textPostalAddress"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333"
                        android:textColorHint="#347B8F" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="2dp"
                        android:text="*"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#C90000"
                        android:visibility="invisible" />
                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="13dp"
                    android:text="Income Group"
                    android:textColor="#347B8F" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/darkblue_border_box">

                    <com.connectapp.user.view.DropDownViewForXML
                        android:id="@+id/dropDown_incomeGroup"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="35dp"
                        android:singleLine="true"
                        android:hint="-- select --"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333" />

                    <ImageView
                        android:layout_width="31.5dp"
                        android:layout_height="31.5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dropdown_arrow_4" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="13dp"
                    android:text="Languages Spoken"
                    android:textColor="#347B8F" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/darkblue_border_box">

                    <TextView
                        android:id="@+id/tv_languages"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/darkblue_border_box"
                        android:hint=""
                        android:inputType="textPostalAddress"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:text="English, Hindi, Bengali"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333"
                        android:textColorHint="#347B8F" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:onClick="onAddLangClick"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="+"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#C90000"
                        android:visibility="visible" />
                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="13dp"
                    android:text="Occupation"
                    android:textColor="#347B8F" />

                <EditText
                    android:id="@+id/et_occupation"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/darkblue_border_box"
                    android:inputType="textPostalAddress"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#333333" />

                <LinearLayout
                    android:id="@+id/ll_imageHolder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <Button
                        android:id="@+id/btn_uploadImage"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="13dp"
                        android:background="@drawable/blue_btn_selector"
                        android:onClick="onCameraClicked"
                        android:shadowColor="#dd000000"
                        android:shadowDx="-1"
                        android:shadowDy="-1"
                        android:shadowRadius="2"
                        android:text="PHOTO"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp">

                        <View
                            android:id="@+id/v_swipeLeft"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/vp_selectedImages"
                            android:background="@drawable/swipe_left"
                            android:visibility="invisible" />

                        <android.support.v4.view.ViewPager
                            android:id="@+id/vp_selectedImages"
                            android:layout_width="200dp"
                            android:layout_height="160dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/default_empty" />

                        <View
                            android:id="@+id/v_swipeRight"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_centerVertical="true"
                            android:layout_margin="5dp"
                            android:layout_toRightOf="@+id/vp_selectedImages"
                            android:background="@drawable/swipe_right"
                            android:visibility="invisible" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_imageProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="[Image added 0/1]"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="top"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="2dp"
                        android:text="*"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#C90000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="marked fields are mandatory"
                        android:textColor="#347B8F" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btn_add_person"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/blue_btn_selector"
                        android:onClick="onAddMoreClick"
                        android:shadowColor="#dd000000"
                        android:shadowDx="-1"
                        android:shadowDy="-1"
                        android:shadowRadius="2"
                        android:text="ADD MORE"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btn_cancel"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/red_btn_selector"
                        android:onClick="onCancelClicked"
                        android:shadowColor="#dd000000"
                        android:shadowDx="-1"
                        android:shadowDy="-1"
                        android:shadowRadius="2"
                        android:text="CANCEL"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_post"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/green_btn_selector"
                        android:onClick="onPostClicked"
                        android:shadowColor="#dd000000"
                        android:shadowDx="-1"
                        android:shadowDy="-1"
                        android:shadowRadius="2"
                        android:text="SUBMIT"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_footer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#2B2B29">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Powered by "
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MASSPL"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:autoLink="web"
                android:text="@string/masspl_site"
                android:textColor="#ffffff" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>