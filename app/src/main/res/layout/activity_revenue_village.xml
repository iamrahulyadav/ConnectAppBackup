<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="@drawable/blue_gradient_header"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:shadowColor="#dd000000"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:shadowRadius="2"
            android:text="Ekal Reach"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#f5f5f5"
            android:textStyle="bold" />

        <!-- <Button
             android:id="@+id/btn_logout"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginLeft="8dp"
             android:layout_marginRight="8dp"
             android:background="@drawable/logout_btn_selector"
             android:onClick="onLogoutClicked"
             android:paddingBottom="5dp"
             android:paddingLeft="8dp"
             android:paddingRight="5dp"
             android:paddingTop="5dp"
             android:shadowColor="#dd000000"
             android:shadowDx="-1"
             android:shadowDy="-1"
             android:shadowRadius="2"
             android:text="Logout"
             android:textColor="#ffffff"
             android:textStyle="bold" />-->

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#9C9874" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_body"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="13dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="State"
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="#333333"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/grey_border_box">

                <TextView
                    android:id="@+id/dropDownActivity_state"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:hint="-- select --"
                    android:paddingLeft="13dp"
                    android:paddingRight="35dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#333333" />

                <ImageView
                    android:layout_width="31.5dp"
                    android:layout_height="31.5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/dropdown_arrow_4"
                    android:visibility="visible" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:text="District"
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="#333333"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/grey_border_box">

                <TextView
                    android:id="@+id/dropDownActivity_district"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:hint="-- select --"
                    android:paddingLeft="13dp"
                    android:paddingRight="35dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#333333" />

                <ImageView
                    android:layout_width="31.5dp"
                    android:layout_height="31.5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/dropdown_arrow_4"
                    android:visibility="visible" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:text="Tehsil(Taluka)"
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="#333333"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/grey_border_box">

                <TextView
                    android:id="@+id/dropDownActivity_tehsil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:hint="-- select --"
                    android:paddingLeft="13dp"
                    android:paddingRight="35dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#333333" />

                <ImageView
                    android:layout_width="31.5dp"
                    android:layout_height="31.5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/dropdown_arrow_4"
                    android:visibility="visible" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:text="Village Name"
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="#333333"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/grey_border_box">

                <TextView
                    android:id="@+id/dropDownActivity_village"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:hint="-- select --"
                    android:paddingLeft="13dp"
                    android:paddingRight="35dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#333333" />

                <ImageView
                    android:layout_width="31.5dp"
                    android:layout_height="31.5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/dropdown_arrow_4"
                    android:visibility="visible" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <CheckBox
                    android:id="@+id/chkbx_projOne"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:button="@drawable/chkbx_selector"
                    android:padding="10dp"
                    android:text="@string/project1"
                    android:textColor="#333333" />

                <CheckBox
                    android:id="@+id/chkbx_projTwo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:button="@drawable/chkbx_selector"
                    android:padding="10dp"
                    android:text="@string/project2"
                    android:textColor="#333333" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <CheckBox
                    android:id="@+id/chkbx_projThree"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:button="@drawable/chkbx_selector"
                    android:padding="10dp"
                    android:text="@string/project3"
                    android:textColor="#333333" />

                <CheckBox
                    android:id="@+id/chkbx_projFour"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:button="@drawable/chkbx_selector"
                    android:padding="10dp"
                    android:text="@string/project4"
                    android:textColor="#333333" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <CheckBox
                    android:id="@+id/chkbx_projFive"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:button="@drawable/chkbx_selector"
                    android:padding="10dp"
                    android:text="@string/project5"
                    android:textColor="#333333" />

                <CheckBox
                    android:id="@+id/chkbx_projSix"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:button="@drawable/chkbx_selector"
                    android:padding="10dp"
                    android:text="@string/project6"
                    android:textColor="#333333" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <CheckBox
                    android:id="@+id/chkbx_projSeven"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:button="@drawable/chkbx_selector"
                    android:padding="10dp"
                    android:text="@string/project7"
                    android:textColor="#333333" />

                <CheckBox
                    android:id="@+id/chkbx_projEight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:button="@drawable/chkbx_selector"
                    android:padding="10dp"
                    android:text="@string/project8"
                    android:textColor="#333333" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <CheckBox
                    android:id="@+id/chkbx_projNine"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:button="@drawable/chkbx_selector"
                    android:padding="10dp"
                    android:text="@string/project9"
                    android:textColor="#333333" />

                <CheckBox
                    android:id="@+id/chkbx_projTen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:button="@drawable/chkbx_selector"
                    android:padding="10dp"
                    android:text="@string/project10"
                    android:textColor="#333333" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:gravity="center"
                android:weightSum="2">

                <!--<Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/blue_btn_selector"
                    android:onClick="onPersonClick"
                    android:shadowColor="#dd000000"
                    android:shadowDx="-1"
                    android:shadowDy="-1"
                    android:shadowRadius="2"
                    android:text="PERSON"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />-->

                <Button
                    android:id="@+id/btn_post"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/green_btn_selector"
                    android:onClick="onNextClick"
                    android:shadowColor="#dd000000"
                    android:shadowDx="-1"
                    android:shadowDy="-1"
                    android:shadowRadius="2"
                    android:text="NEXT"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>