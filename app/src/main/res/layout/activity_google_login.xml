<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/v_center"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="21dp"
        android:background="@color/chat_grey" />

    <LinearLayout
        android:id="@+id/llEnterOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_center"
        android:orientation="horizontal"
        android:weightSum="3">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.5" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="17dp"
            android:text="Sign with your google account"
            android:textAppearance="?android:textAppearance"
            android:textColor="#555555" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.5" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSendOtp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llEnterOTP"
        android:layout_marginBottom="21dp"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.3" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/red_border_box"
            android:gravity="center"
            android:onClick="onGoogleClick"
            android:orientation="horizontal"
            android:padding="7dp">


            <ImageView

                android:layout_width="25dp"
                android:layout_height="35dp"
                android:layout_toLeftOf="@+id/tv_facebook"
                android:padding="3dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_google_plus" />

            <TextView
                android:id="@+id/tv_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Google"
                android:textAppearance="?android:textAppearance"
                android:textColor="#DB4C3F" />
        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.3" />
    </LinearLayout>


</RelativeLayout>